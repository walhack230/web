        <script>
            function cerrarSesion() {
                // Elimina cualquier dato almacenado en localStorage o sessionStorage
                localStorage.clear();
                sessionStorage.clear();

                // Opcional: Realiza una llamada a un endpoint para cerrar sesión en el servidor
                // fetch('/api/logout', { method: 'POST' });

                // Redirige al usuario a la página de inicio de sesión
                window.location.href = '/Home/Index'; // Cambia '/Login' por la ruta de tu página de inicio de sesión
            }
        </script>
