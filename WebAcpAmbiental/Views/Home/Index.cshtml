@{
    Layout = null;  // Esto evita que se cargue el Layout común de la aplicación
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="~/WebAcpAmbiental.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="@Url.Content("~/logoacp2.png")" type="image/png" />

  

</head>
<body>
    <div class="login-container">
        <div class="login-form">
            <h2>Iniciar Sesión</h2>

            <!-- Mostrar error si existe -->
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form action="@Url.Action("Principal", "Home")" method="POST" onsubmit="showLoaderAndRedirect(event)">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control form-control-lg" id="username" name="username" placeholder="Usuario" required>
                    <label for="username">Usuario</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Contraseña" required>
                    <label for="password">Contraseña</label>
                </div>
                <button type="submit" class="btn btn-primary w-100">Ingresar</button>
            </form>
        </div>
        <div class="login-image"></div>
    </div>
    
    <div id="loader-overlay" style="visibility: hidden;">
        <div class="loader"></div>
    </div>

    <script src="~/js/login.js" asp-append-version="true"></script>

  

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

 
   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
